{
	"manifest_version": 2,
	"name": "GenNoID",
	"description": "Generuje różne identyfikatory i numery np. NIP, REGON itp.",
	"version": "1.0",
	"developer" : { "name" : "Cezary Kąpicki",
					"url": "https://github.com/czarek1986/GenNoID-Chromium-Extension.git 
				},
	"permissions": ["contextMenus"],
	"background" : { "scripts" : ["generator.js"]},
	"content_scripts" : [ { 
			"matches" : [ "<all_urls>" ],
			"js" : ["content.js", "jquery.min.js"] 
	} ],
	"icons": {
		"16": "icon-small.png",
		"48" : "icon-medium.png",
		"128" : "icon-large.png"
	}
}